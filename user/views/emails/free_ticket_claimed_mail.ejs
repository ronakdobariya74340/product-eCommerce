                    <td class="value"><%= totalEntries %></td>
                  </tr>
                  <tr>
                    <td class="d-item">Celebrity Raffle:</td>
                    <td class="value"><%= celebrityName %></td>
                  </tr>
                  <tr>
                    <td class="d-item">Raffle Draw Date:</td>
                    <td class="value"> <%= drawDate %></td>
                  </tr>
