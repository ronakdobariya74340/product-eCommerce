<%- include("header") %>

<div class="content-area">
  <div
    class="list-filter p-3 bg-white rounded-2 bs-border d-flex align-items-center justify-content-between"
  >
    <div class="filter-area">
      <div class="dropdown filter-dropdown">
        <button
          id="email-filter-btn"
          class="filter-btn dropdown-toggle"
          type="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <span class="fs-14 fw-md d-flex align-items-center gap-1">
            <img
              src="<%= process.env.SERVER_URL %>/assets/images/circle-plus.svg"
              alt=""
            />
            Email
          </span>
          <div class="hr-line-sm"></div>
          <div class="filter-data"></div>
        </button>
        <ul
          class="dropdown-menu filter-dropdown-menu amount-filter bs-border bg-white"
        >
          <span class="fw-md fs-14 text-start">Filter by Email</span>
          <div class="form-group mt-10">
            <input
              class="form-control"
              type="text"
              id="email-filter-input"
              name="email"
              placeholder="Email"
            />
          </div>
          <button
            class="btn btn-primary w-100 d-block mt-10"
            id="apply-email-filter"
            disabled
          >
            Apply
          </button>
          <div class="cl-btn-wrapper d-none" id="clear-email-filter">
            <button class="clear-btn fs-14 fw-normal text-center w-100">
              Clear filters
            </button>
          </div>
        </ul>
      </div>
      <div class="dropdown filter-dropdown">
        <button
          id="status-filter-btn"
          class="filter-btn dropdown-toggle"
          type="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <span class="fs-14 fw-md d-flex align-items-center gap-1">
            <img src="/images/circle-plus.svg" alt="" /> Account Status
          </span>
          <div class="hr-line-sm"></div>
          <div class="filter-data"></div>
        </button>
        <ul class="dropdown-menu filter-dropdown-menu bs-border bg-white">
          <li>
            <a
              class="dropdown-item account-status-filter"
              data-status-text="Pending"
              data-status="1"
              >Pending</a
            >
          </li>
          <li>
            <a
              class="dropdown-item account-status-filter"
              data-status-text="Active"
              data-status="2"
              >Active</a
            >
          </li>
          <li>
            <a
              class="dropdown-item account-status-filter"
              data-status-text="Suspended"
              data-status="3"
              >Suspended</a
            >
          </li>
          <div class="cl-btn-wrapper d-none" id="clear-status-filter">
            <button class="clear-btn fs-14 fw-normal text-center w-100">
              Clear filters
            </button>
          </div>
        </ul>
      </div>
      <div class="dropdown filter-dropdown">
        <button
          id="google2fa-filter-btn"
          class="filter-btn dropdown-toggle"
          type="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <span class="fs-14 fw-md d-flex align-items-center gap-1">
            <img src="/images/circle-plus.svg" alt="" /> 2FA Status
          </span>
          <div class="hr-line-sm"></div>
          <div class="filter-data"></div>
        </button>
        <ul class="dropdown-menu filter-dropdown-menu bs-border bg-white">
          <li>
            <a
              class="dropdown-item 2fa-status-filter"
              data-status-text="Disabled"
              data-status="0"
              >Disabled</a
            >
          </li>
          <li>
            <a
              class="dropdown-item 2fa-status-filter"
              data-status-text="Enabled"
              data-status="1"
              >Enabled</a
            >
          </li>
          <div class="cl-btn-wrapper d-none" id="clear-google2fa-filter">
            <button class="clear-btn fs-14 fw-normal text-center w-100">
              Clear filters
            </button>
          </div>
        </ul>
      </div>
      <button
        class="f-reset-btn fs-14 fw-md bg-transparent d-none"
        id="resetFilters"
      >
        Reset <img src="/images/f-close.svg" alt="" />
      </button>
    </div>
    <div
      id="pagination-div"
      class="d-flex align-items-center flex-wrap justify-content-end gap-2"
    >
      <div class="pagination-show d-flex align-items-center">
        Show
        <select
          id="recordPerPage"
          class="form-select form-select-sm w-auto"
          aria-label="Small select example"
          onchange="changeRecordPerPage('/admin/user-list')"
        >
          <option selected="10">10</option>
          <option value="20">20</option>
          <option value="40">40</option>
          <option value="60">60</option>
        </select>
      </div>
      <div class="page navigation example">
        <ul class="pagination justify-content-end mb-0 gap-0"></ul>
      </div>
    </div>
  </div>
  <div id="table-data"></div>
</div>

<!-- Delete User Modal -->
<div
  class="modal fade custom-popup"
  id="delete-modal"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  style="display: none"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        <div class="modal-header mb-20">
          <h5 class="modal-title">Delete User</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            <svg
              width="30"
              height="31"
              viewBox="0 0 30 31"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <g clip-path="url(#clip0_161_15505)">
                <path
                  d="M22.5 8L7.5 23"
                  stroke="white"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                ></path>
                <path
                  d="M7.5 8L22.5 23"
                  stroke="white"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                ></path>
              </g>
              <defs>
                <clipPath id="clip0_161_15505">
                  <rect
                    width="30"
                    height="30"
                    fill="white"
                    transform="translate(0 0.5)"
                  ></rect>
                </clipPath>
              </defs>
            </svg>
          </button>
        </div>
        <input
          type="hidden"
          name="delete-user-id"
          id="delete-user-id"
          value=""
        />
        <div class="popup-text confirm-deletion">
          <p>
            Are you sure you want to delete this user? This action cannot be
            undone.
          </p>
        </div>
        <div class="page-btn two-btn mt-20">
          <button
            class="btn btn-primary btn-red w-100 text-center"
            id="delete-user"
          >
            Yes,Delete
          </button>
          <button
            class="btn btn-primary btn-transparent w-100 text-center"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Edit User Modal-->
<div
  class="modal fade custom-popup"
  id="edit-modal"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  style="display: none"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        <div class="modal-header mb-20">
          <h5 class="modal-title">Edit User</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            <svg
              width="30"
              height="31"
              viewBox="0 0 30 31"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <g clip-path="url(#clip0_161_15505)">
                <path
                  d="M22.5 8L7.5 23"
                  stroke="white"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                ></path>
                <path
                  d="M7.5 8L22.5 23"
                  stroke="white"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                ></path>
              </g>
              <defs>
                <clipPath id="clip0_161_15505">
                  <rect
                    width="30"
                    height="30"
                    fill="white"
                    transform="translate(0 0.5)"
                  ></rect>
                </clipPath>
              </defs>
            </svg>
          </button>
        </div>
        <div class="popup-text confirm-deletion">
          <div class="form-group mb-20">
            <label>Name</label>
            <p class="fs-email" id="edit-user-name"></p>
          </div>
          <div class="form-group mb-20">
            <label>Email</label>
            <p class="fs-email" id="edit-user-email"></p>
          </div>
          <div class="form-group mb-30">
            <label>Status</label>
            <select class="form-control" id="edit-user-status">
              <option value="1">Pending</option>
              <option value="2">Active</option>
              <option value="3">Inactive</option>
              <option value="4">Suspend</option>
            </select>
          </div>
        </div>
        <input type="hidden" name="edit-user-id" id="edit-user-id" value="" />
        <div class="page-btn two-btn mt-20">
          <button class="btn btn-primary w-100 text-center" id="edit-user">
            Save Changes
          </button>
          <button
            class="btn btn-primary btn-transparent w-100 text-center"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("footer") %>
