<%- include("header") %>

    <div class="content-area pb-5">
        <div class="list-filter p-3 bg-white rounded-2 bs-border d-flex align-items-center justify-content-between">
            <div class="filter-area">
                <div class="dropdown filter-dropdown filter-name">
                    <button class="filter-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="fs-14 fw-md d-flex align-items-center gap-1">
                            <img src="/images/circle-plus.svg" alt="" /> Name</span>
                        <div class="hr-line-sm"></div>
                        <div class="filter-data"></div>
                    </button>
                    <div class="dropdown-menu filter-dropdown-menu amount-filter bs-border bg-white">
                        <span class="fw-md fs-14 text-start">Filter by Name</span>
                        <div class="form-group mt-10">
                            <input class="form-control" type="text" id="nameInput" name="nameInput" placeholder="Please enter first name or last name" />
                        </div>
                        <button class="btn btn-primary w-100 d-block mt-10" id="applyName" disabled>
                            Apply
                        </button>
                        <div class="cl-btn-wrapper">
                            <button class="clear-btn fs-14 fw-normal text-center w-100" id="clearName" disabled>
                                Clear filters
                            </button>
                        </div>
                    </div>
                </div>
                <div class="dropdown filter-dropdown">
                    <button id="status-filter-btn" class="filter-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="fs-14 fw-md d-flex align-items-center gap-1">
                            <img src="/images/circle-plus.svg" alt="" /> Status
                        </span>
                        <div class="hr-line-sm"></div>
                        <div class="filter-data"></div>
                    </button>
                    <ul class="dropdown-menu filter-dropdown-menu bs-border bg-white">
                        <li>
                            <a class="dropdown-item account-status-filter cursor-pointer" data-status-text="InActive" data-status="1">
                                InActive
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item account-status-filter cursor-pointer" data-status-text="Active" data-status="2">
                                Active
                            </a>
                        </li>
                        <div class="cl-btn-wrapper d-none" id="clear-status-filter">
                            <button class="clear-btn fs-14 fw-normal text-center w-100">
                                Clear filters
                            </button>
                        </div>
                    </ul>
                </div>
                <button class="f-reset-btn fs-14 fw-md bg-transparent d-none" id="resetFilters">
                    Reset <img src="/images/f-close.svg" alt="" />
                </button>
            </div>
            <div id="pagination-div" class="d-flex align-items-center flex-wrap justify-content-end gap-2">
                <div class="pagination-show d-flex align-items-center">
                    Show
                    <select id="recordPerPage" class="form-select form-select-sm w-auto" aria-label="Small select example" onchange="changeRecordPerPage('/admin/product-list')">
                        <option selected="10">10</option>
                        <option value="20">20</option>
                        <option value="40">40</option>
                        <option value="60">60</option>
                    </select>
                </div>
                <div class="page navigation example">
                    <ul class="pagination justify-content-end mb-0 gap-0"></ul>
                </div>
            </div>
        </div>

        <div id="table-data"></div>
    </div>

    <div class="container">
        <div id="add_new_product_category" class="add-list" data-bs-toggle="modal" data-bs-target="#addProductCategoryModal">
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                <g clip-path="url(#clip0_460_20805)">
                    <path d="M20 8.33337V31.6667" stroke="#171D25" stroke-width="4" stroke-linecap="round"
                        stroke-linejoin="round"></path>
                    <path d="M8.32812 20H31.6615" stroke="#171D25" stroke-width="4" stroke-linecap="round"
                        stroke-linejoin="round"></path>
                </g>
                <defs>
                    <clipPath id="clip0_460_20805">
                        <rect width="40" height="40" fill="white"></rect>
                    </clipPath>
                </defs>
            </svg>
        </div>
    </div>

    <div class="modal fade" id="addProductCategoryModal" tabindex="-1" aria-labelledby="addProductCategoryModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-2">
                <div class="modal-header px-4 py-3 border-bottom align-items-start">
                    <h5 class="modal-title fw-bold text-dark fs-4" id="addProductCategoryModalLabel">
                        Add Product Category
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <svg width="30" height="31" viewBox="0 0 30 31" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g clip-path="url(#clip0_161_15505)">
                                <path d="M22.5 8L7.5 23" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                <path d="M7.5 8L22.5 23" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                            </g>
                            <defs>
                                <clipPath id="clip0_161_15505">
                                    <rect width="30" height="30" fill="white" transform="translate(0 0.5)"></rect>
                                </clipPath>
                            </defs>
                        </svg>
                    </button>
                </div>

                <div class="modal-body p-4">
                    <form id="productCategoryForm" class="d-flex flex-column gap-3">
                        <div class="row g-3">
                            <div class="col-lg-6">
                                <div class="flex-fill">
                                    <label for="productCategoryName" class="form-label text-dark fw-semibold d-flex align-items-center gap-1 mb-2">
                                        Category Name
                                    </label>
                                    <input type="text" class="form-control rounded-3" id="productCategoryName" placeholder="Enter Category Name"/>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="flex-fill">
                                    <label for="status" class="form-label text-dark">Status</label>
                                    <div class="checkbox off position-relative mt-0">
                                        <input type="checkbox" class="" id="productCategoryStatus" />
                                        <label for="productCategoryStatus"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-top-0 d-flex justify-content-end px-4 pb-3 gap-2">
                    <button type="button" class="btn btn-primary btn-transparent rounded-2" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary rounded-2" id="add_product_category">
                        Add Category
                    </button>
                    <button type="button" class="btn btn-primary rounded-2 d-none" id="update_product_category">
                        Update Category
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete product category Modal -->
    <div class="modal fade" id="deleteProductCategoryModal" tabindex="-1" aria-labelledby="deleteProductCategoryModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow rounded-3 p-2">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold text-dark" id="deleteProductCategoryModalLabel">
                        Delete Product Category
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <svg width="30" height="31" viewBox="0 0 30 31" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g clip-path="url(#clip0_161_15505)">
                                <path d="M22.5 8L7.5 23" stroke="white" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round"></path>
                                <path d="M7.5 8L22.5 23" stroke="white" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round"></path>
                            </g>
                            <defs>
                                <clipPath id="clip0_161_15505">
                                    <rect width="30" height="30" fill="white" transform="translate(0 0.5)"></rect>
                                </clipPath>
                            </defs>
                        </svg>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this product category?</p>
                    <p class="text-muted small">This action cannot be undone.</p>
                </div>
                <div class="modal-footer border-0 d-flex justify-content-end">
                    <button type="button" class="btn btn-primary btn-transparent" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary btn-danger" id="confirm_delete">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <%- include("footer") %>