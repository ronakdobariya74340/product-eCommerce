<%- include("header") %>
    <input type="hidden" id="product_id" value="<%= body?.product?._id %>" />
    <div class="content-area">
        <div class="user-access-container">
            <div class="user-info-line">
                <div class="back-btn">
                    <a href="/admin/product-management">
                        <svg width="4" height="8" viewBox="0 0 4 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3.5 1L0.5 4L3.5 7" stroke="#171D25" stroke-linecap="round"
                                stroke-linejoin="round"></path>
                        </svg>
                        Back
                    </a>
                </div>
            </div>
            <div class="mt-3 d-flex align-items-center gap-4">
                <h3 class="fw-bold mb-1"><%= body?.product?.name %></h3>
            </div>
        </div>
        <div class="row gy-4">
            <div class="col-xl-3 col-md-6 flex-grow-1">
                <div class="static-card bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="static-data">
                            <span class="sd-title fs-14 d-block">Total Users</span>
                            <span class="sd-data">13</span>
                        </div>
                        <div class="sc-img">
                            <img src="/images/user.svg" alt="bot" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 flex-grow-1">
                <div class="static-card bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="static-data">
                            <span class="sd-title fs-14 d-block">Total Revenue</span>
                            <span class="sd-data">125,430</span>
                        </div>
                        <div class="sc-img">
                            <img src="/images/dollor.svg" alt="bot" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="admin-table mt-30">
            <div class="pb-3">
                <div class="d-flex align-items-center justify-content-between">
                    <h4 class="fw-medium mt-3">Transaction List</h4>
                    <div id="pagination-div" class="d-flex align-items-center flex-wrap justify-content-end gap-2">
                        <div class="pagination-show d-flex align-items-center">
                            Show
                            <select id="recordPerPage" class="form-select form-select-sm w-auto" aria-label="Small select example" onchange="changeRecordPerPage('/admin/product-transaction-list')">
                                <option selected="10">10</option>
                                <option value="20">20</option>
                                <option value="40">40</option>
                                <option value="60">60</option>
                            </select>
                        </div>
                        <div class="page navigation example">
                            <ul class="pagination justify-content-end mb-0 gap-0"></ul>
                        </div>
                    </div>
                </div>
            
                <div id="table-data"></div>
            </div>
        </div>
    </div>

    <%- include("footer") %>